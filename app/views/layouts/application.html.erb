 <!DOCTYPE html>
 <html>
   <head>
     <title>Bookers2</title>
     <meta name="viewport" content="width=device-width,initial-scale=1">
     <%= csrf_meta_tags %>
     <%= csp_meta_tag %>
 
     <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
     <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
     
     <script src="https://kit.fontawesome.com/7f7a7e072f.js" crossorigin="anonymous"></script>
   </head>

  <body>
    
        
    <header>
    
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" >
    
        
     <li class="navbar-brand ">
      <%= link_to "Bookers",root_path,class:"text-light" %>
     </li>
    
    <div class = "collapse navbar-collapse">
    
        <ul class="navbar-nav ml-auto">
    
            <% if user_signed_in? %>
             <li class="nav-item">
               <%= link_to  user_path(current_user),class:"nav-link text-light" do %>
                <i class="fas fa-home"></i>Home
               <% end %>
             </li>
             
             <li class="nav-item">
                <%= link_to  users_path,class:"nav-link text-light" do %>
                 <i class="fas fa-users"></i>Users
                <% end %>
              </li>
              
              <li class="nav-item">
                <%= link_to  books_path,class:"nav-link text-light" do %>
                 <i class="fas fa-book-open"></i>Books
                <% end %>
              </li>
              
             <li class="nav-item">
                <%= link_to  destroy_user_session_path, method: :delete,class:"nav-link text-light"  do %>
                 <i class="fas fa-sign-out-alt"></i>Log out
                <% end %>
             </li>
              
            <% else %>
             <li class="nav-item">
              <%= link_to  root_path,class:"nav-link text-light" do %>
               <i class="fas fa-home"></i>Home
              <% end %>
             </li>
             
             <li class="nav-item">
              <%= link_to  homes_about_path,class:"nav-link text-light" do %>
               <i class="fas fa-link"></i>About
              <% end %>
             </li>
            
             <li class="nav-item">
                <%= link_to  new_user_registration_path,class:"nav-link text-light" do %>
                 <i class="fas fa-user-plus"></i>Sign up
                <% end %>
              </li>
              
             <li class="nav-item">
                <%= link_to  user_session_path, method: :post,class:"nav-link text-light"  do%>
                 <i class="fas fa-sign-in-alt"></i>Log in
                <% end %>
             </li>
              
            <% end %>
        </ul>
    
    </div>
    
     
    </nav>
   
    </header>
    
    <%= yield %>
    
  <footer>
    <P>CopyRight Infratop.inc</P>
  </footer>

  
    
  </body>
  
  
  
  
</html>
