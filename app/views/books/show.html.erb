<div class = "container">

<div class = "row">

<div class = "col-md-3">

<%= render 'users/info', book: @book_new, user: @book.user %>

</div>

<div class = "col-md-8 offset-md-1"

<hi>Book detail</hi>
<table>
 <tbody>
  <tr>
     <td>
      <%= link_to user_path(@book.user.id) do %>
       <%= image_tag @book.user.get_profile_image(200,200) %>
       <%= @book.user.name %>
      <% end %>
     </td>
    
    <td><%= link_to @book.title,book_path(@book.id) %></td>
    <td><%= @book.body %></td>
    
    <% if @book.user == current_user %>
    <td><%= link_to"Edit",edit_book_path(@book.id) %></td>
    <td><%= link_to"Destroy",book_path(@book.id),method: :delete %></td>
  </tr>
    <% end %>
  </tbody>
    
</table>

</div>
</div>